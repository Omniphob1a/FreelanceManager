{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "RouteId": "authRoute",
        "ClusterId": "usersCluster",
        "Match": {
          "Path": "/api/Auth/{**catch-all}"
        }
      },
      "roles": {
        "RouteId": "roles",
        "ClusterId": "usersCluster",
        "Match": {
          "Path": "/api/Roles/{**catch-all}"
        }
      },
      "usersRoute": {
        "RouteId": "usersRoute",
        "ClusterId": "usersCluster",
        "Match": {
          "Path": "/api/Users/{**catch-all}"
        }
      },
      "projectsRoute": {
        "RouteId": "projectsRoute",
        "ClusterId": "projectsCluster",
        "Match": {
          "Path": "/api/Projects/{**catch-all}"
        }
      },
      "tasksRoute": {
        "RouteId": "tasksRoute",
        "ClusterId": "tasksCluster",
        "Match": {
          "Path": "/api/ProjectTasks/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "usersCluster": {
        "Destinations": {
          "usersDestination": { "Address": "http://users-api:80" }
        }
      },
      "projectsCluster": {
        "Destinations": {
          "projectsDestination": { "Address": "http://projects-api:80" }
        }
      },
      "tasksCluster": {
        "Destinations": {
          "tasksDestination": { "Address": "http://tasks-api:8080" }
        }
      }
    }
  }
}
